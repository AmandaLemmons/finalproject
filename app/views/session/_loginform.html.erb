
  <%= form_tag auth_path, remote: true, method: :post do %>

    <div>
      <%= label_tag :email%>
      <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
      <br>
    </div>

    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password, "",  class: "form-control", placeholder: "Password"%>
      <br>
    </div>

    <div>
      <%= submit_tag "Log In", class: "btn btn-primary btn-lg login-btn" %>
      <br>
      <br>
    </div>
  <% end %>
